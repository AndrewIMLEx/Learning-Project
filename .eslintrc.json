//The .elintrc.json file has been generated using yarn run eslint --init
{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "eslint.options": {
        "env":{
            "es6":true
        },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "js":true,
            "ecmaVersion": 6
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi" : ["error", "always"] //add rule to disallow accidental use of semi-colons
    }
}}
